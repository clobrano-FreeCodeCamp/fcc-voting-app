{{!< layout/main}}

{{#if username }}
{{else}}
<div class="jumbotron">
  <p>Voting APP for Free Code Camp</p>
  <p><a class="btn btn-primary btn-lg" href="https://www.freecodecamp.com/challenges/build-a-voting-app" role="button">Learn more Â»</a></p>
</div>
{{/if}}

<div class="container-fluid">
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
      <th>Votes</th>
    </tr>
  </thead>
  <tbody>
    {{#each polls}}
      <tr>
        <th>{{inc @index}}</th>
        <td>{{title}}</td>
        <td>{{votes}}</td>
        {{#if (eq ../userid owner)}}<td><a href="/polls/edit/{{_id}}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>{{/if}}
      </tr>
    {{/each}}
  </tbody>
</table>

{{#if username}}
  <a class="btn btn-md btn-default" role="button" href="/polls/new">+ New Poll</a>
{{/if}}
</div>
