{{!< layout/main}}

{{#if username }}
{{else}}
<div class="jumbotron">
  <p>Voting APP for Free Code Camp</p>
  <p><a class="btn btn-primary btn-lg" href="https://www.freecodecamp.com/challenges/build-a-voting-app" role="button">Learn more Â»</a></p>
</div>
{{/if}}

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
      <th>Votes</th>
    </tr>
  </thead>
  <tbody>
    {{#each polls}}
      <tr>
        <th>{{inc @index}}</th>
        <td>{{this.title}}</td>
        <td>{{this.votes}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>

{{#if username}}
  <a class="btn btn-md btn-default" role="button" href="/polls/new">+ New Poll</a>
{{/if}}
