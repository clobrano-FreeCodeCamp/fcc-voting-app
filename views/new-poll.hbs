{{!< layout/main}}
<div class="wrapper">
  <form action={{action}} method="POST">
    <div class="form-group container-polls center-block">
      <label for="title">Title:</label>
      <input type="text" class="form-control" name="title" placeholder="What should I do next?">
    </div>
    <div class="form-group container-polls center-block">
      <label for="comment">Choices (one line for each):</label>
      <textarea class="form-control" rows="5" name="choices" placeholder="Conquer the world"></textarea>
    </div>
    <div  class="container container-polls center-block">
        <button type="submit" class="btn btn-success">Create</button>
    </div>
  </form>
</div>
